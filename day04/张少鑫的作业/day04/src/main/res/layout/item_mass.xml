<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mass_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mass_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/mass_image"
        app:layout_constraintTop_toTopOf="@id/mass_image" />

    <TextView
        android:id="@+id/mass_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/mass_image"
        app:layout_constraintTop_toBottomOf="@id/mass_name" />

    <TextView
        android:id="@+id/mass_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/mass_number"
        app:layout_constraintTop_toBottomOf="@id/mass_name" />

    <TextView
        android:id="@+id/mass_note"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/mass_image"
        app:layout_constraintLeft_toRightOf="@id/mass_image" />

    <Button
        android:id="@+id/mass_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/mass_btn"
        android:text="加入"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/mass_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mass_image" />

</androidx.constraintlayout.widget.ConstraintLayout>