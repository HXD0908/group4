<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SearchView
        android:background="@drawable/b3"
        android:id="@+id/sv"
        android:layout_height="@dimen/dp_39"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_width="@dimen/dp_264"
        app:iconifiedByDefault="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="搜索诗人名字 诗歌关键字" />

    <ImageView
        android:id="@+id/iva"
        android:layout_height="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_18"
        android:src="@drawable/b3"
        app:layout_constraintLeft_toRightOf="@+id/sv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_height="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_20"
        android:src="@drawable/b3"
        app:layout_constraintLeft_toRightOf="@+id/iva"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivb"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_width="@dimen/dp_339"
        android:src="@drawable/b3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv" />



    <LinearLayout
        android:id="@+id/lla"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_width="@dimen/dp_320"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivb">

        <ImageView
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/b3" />

        <ImageView
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/b3" />

        <ImageView
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/b3" />

        <ImageView
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/b3" />

        <ImageView
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/b3" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llb"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="@dimen/dp_320"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lla">

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="每日推荐"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="飞花令"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="诗歌社群"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="排行榜"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="会员专区"
            android:textSize="@dimen/dp_11" />

    </LinearLayout>

    <TextView
        android:id="@+id/tva"
        android:layout_height="@dimen/dp_21"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_width="@dimen/dp_80"
        android:text="诗歌群PK"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llb" />

    <TextView
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_141"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="@dimen/dp_117"
        android:text="08-01日晚8:00开始"
        app:layout_constraintLeft_toRightOf="@+id/tva"
        app:layout_constraintTop_toBottomOf="@+id/llb" />

    <ImageView
        android:id="@+id/ivc"
        android:layout_height="@dimen/dp_169"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_width="@dimen/dp_339"
        android:src="@drawable/b3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tva" />

    <Button
        android:background="@drawable/b3"
        android:id="@+id/buta"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="@dimen/dp_76"
        android:text="丁香诗社"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivc" />

    <Button
        android:background="@drawable/b3"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_135"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="@dimen/dp_76"
        android:text="月季诗社"
        app:layout_constraintLeft_toRightOf="@+id/buta"
        app:layout_constraintTop_toBottomOf="@+id/ivc" />

    <TextView
        android:id="@+id/tvb"
        android:layout_height="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="@dimen/dp_134"
        android:text="这两个诗社你更看好谁"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buta" />

    <ListView
        android:background="#f5f5f5"
        android:id="@+id/lv"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tvb" />

    <TextView
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="@dimen/dp_120"
        android:text="荣誉诗人"
        android:textSize="@dimen/dp_25"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
