<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/hot_iv"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/hot_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:lines="1"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="@id/hot_iv"
        app:layout_constraintRight_toRightOf="@id/hot_iv"
        app:layout_constraintTop_toBottomOf="@id/hot_iv"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/hot_tv_title"
        app:layout_constraintLeft_toLeftOf="@id/hot_tv_title"
        app:layout_constraintRight_toRightOf="@id/hot_tv_title"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_location"
            android:textSize="12sp"
            android:text="北京北京北京"
            android:maxEms="4"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_startTime"
            android:textSize="12sp"
            android:text="2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout >