<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:scaleType="fitXY"
            android:src="@drawable/niao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view"
                android:layout_width="@dimen/dp_3"
                android:background="#4CAF50"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_pk"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诗歌PK"
                android:textColor="#000"
                android:textSize="@dimen/sp_23" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_10"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:layout_height="match_parent">

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="7月20日19点准时PK，期待您的观战"
                    android:textColor="#000"
                    android:id="@+id/tv_pk_title"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:id="@+id/card1"
                    android:layout_marginTop="@dimen/dp_10"
                    app:layout_constraintTop_toBottomOf="@id/tv_pk_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="@dimen/dp_150">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:src="@mipmap/ic_launcher"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="牡丹诗社"
                            android:textColor="#000"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="群主：橘子味的气泡水"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#000"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="群人数：50/60"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_10"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="群标签：现代诗"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_10"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/dp_50"
                    app:layout_constraintRight_toLeftOf="@id/card2"
                    app:layout_constraintTop_toTopOf="@id/card1"
                    app:layout_constraintBottom_toBottomOf="@id/card1"
                    app:layout_constraintLeft_toRightOf="@id/card1"
                    android:src="@drawable/vs"
                    android:layout_height="@dimen/dp_50"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/dp_100"
                    android:id="@+id/card2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/card1"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_height="@dimen/dp_150">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:src="@mipmap/ic_launcher"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:text="荷花诗社"
                            android:textColor="#000"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="群主：橘子味的气泡水"
                            android:textSize="@dimen/sp_10"
                            android:textColor="#000"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="群人数：50/60"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_10"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="群标签：现代诗"
                            android:textColor="#000"
                            android:textSize="@dimen/sp_10"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/dp_3"
                android:background="#4CAF50"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10" />

            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="荣誉诗人"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="@dimen/sp_23" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:src="@drawable/right"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/dp_3"
                android:background="#4CAF50"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_10" />

            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诗词佳句"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="@dimen/sp_23" />

            <TextView
                android:layout_width="wrap_content"
                android:text="更多"
                android:textSize="@dimen/sp_22"
                android:drawableRight="@drawable/right"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="诗作锦集"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_150"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/aaa"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_100"/>

            <ImageView
                android:layout_width="@dimen/dp_150"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@drawable/aaa"
                android:layout_height="@dimen/dp_100"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="一周榜单"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dp_150"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/aaa"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_100"/>

            <ImageView
                android:layout_width="@dimen/dp_150"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:src="@drawable/aaa"
                android:layout_height="@dimen/dp_100"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="一起读诗"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:src="@color/colorAccent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_130"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="诗歌社团"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:src="@color/colorAccent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_130"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="会员专区"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:background="#B8B8B8"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:src="@color/colorAccent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="@dimen/dp_130"/>


    </LinearLayout>

</ScrollView>