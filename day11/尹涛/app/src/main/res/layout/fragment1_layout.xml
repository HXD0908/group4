<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
                <ImageView
                    android:background="@mipmap/a"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <TextView
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/iv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="出行必备"
                    android:id="@+id/text"
                    android:textSize="24sp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_marginTop="@dimen/dp_17"
                    app:layout_constraintTop_toBottomOf="@id/text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70">
                    <Button
                        android:background="#CDDC39"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="民宿"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_67"/>
                    <Button
                        android:background="#2196F3"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="翻译"
                        android:scrollbarSize="24sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_67"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/dp_36"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll"
                    android:layout_width="wrap_content"
                    android:text="海外攻略"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/ll"
                    android:layout_marginTop="@dimen/dp_36"
                    android:text="查看更多"
                    android:id="@+id/text2"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textSize="20sp"
                    android:textColor="#2196F3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text2"
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/b"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_95"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/c"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_95"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/d"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_95"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/text5"
                    android:textStyle="bold"
                    android:text="国内攻略"
                    android:textSize="24sp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_33"
                    app:layout_constraintTop_toBottomOf="@id/ll1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/ll1"
                    android:layout_marginTop="@dimen/dp_33"
                    android:text="查看更多"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textSize="20sp"
                    android:textColor="#2196F3"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/da" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="大理  DALI"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/chengdu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="成都CHENGDU"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="上海shanghai"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/hang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="杭州hangzhou"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_33"
            android:text="魅力海岛"
            android:id="@+id/text4"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginRight="@dimen/dp_15"
            android:text="查看更多"
            android:textColor="#2196F3"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll2" />
        <ImageView
            android:id="@+id/iv1"
            android:background="@drawable/haidao"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@id/text4"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <LinearLayout
            android:id="@+id/ll6"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            app:layout_constraintTop_toBottomOf="@id/iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="沙巴"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/bian_select"
                android:layout_height="@dimen/dp_20"/>
            <Button
                android:layout_marginLeft="@dimen/dp_10"
                android:text="塞班岛"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/bian_select"
                android:layout_height="@dimen/dp_20"/>
            <Button
                android:layout_marginLeft="@dimen/dp_10"
                android:text="济州岛"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/bian_select"
                android:layout_height="@dimen/dp_20"/>
            <Button
                android:layout_marginLeft="@dimen/dp_10"
                android:text="斯里兰卡岛"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@drawable/bian_select"
                android:layout_height="@dimen/dp_20"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text7"
            android:text="悠然古镇"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_32"
            app:layout_constraintTop_toBottomOf="@id/ll6"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginRight="@dimen/dp_15"
            android:text="查看更多"
            android:textColor="#2196F3"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll6" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/gu"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@id/text7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>