<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/zongbuju"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.FaXianFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/paozi"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/touxiang1"
                android:layout_margin="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="袍子"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/shetuan"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/fengzheng"
                android:layout_margin="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="社团"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/paihangbang"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/denglong"
                android:layout_margin="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:text="排行榜"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="热门活动"
                android:textColor="#000000"
                android:textSize="20dp"
                android:id="@+id/remenhuodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gengduohuodong"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:text="更多活动 > "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>